<form method="post" action="/students">
  <label for="name-field">Name:</label>
  <input
  type="text"
  name="name"
  id="name-field"
  />

  <label for="house-selection">Select a house:</label>
  <select name="house" id="house-selection">
    <% @houses.each do |house|%>
    <option value= <%= house.id %>><%=house.name%></option>
    <% end %>
  </select>

  <label for="age-field">Age:</label>
  <input
  type="number"
  name="age"
  id="age-field"
  />

  <input type="submit" value="add the student">
</form>
